{
  "name": "svgo-jsx-mcp",
  "version": "0.1.0",
  "description": "MCP server for SVG optimization with JSX-compatible camelCase attribute conversion",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "svgo-jsx-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "prisma"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:server": "node dist/server.js",
    "start:stdio": "node dist/index.js",
    "dev": "pnpm build && pnpm start:server",
    "dev:stdio": "pnpm build && pnpm start:stdio",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:seed": "node dist/db.js",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "mcp",
    "svg",
    "svgo",
    "optimization",
    "jsx",
    "react",
    "camelcase",
    "docker",
    "coolify"
  ],
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@prisma/client": "^5.22.0",
    "hono": "^4.11.3",
    "prisma": "^5.22.0",
    "svgo": "^4.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "shx": "^0.4.0",
    "typescript": "^5.9.2"
  }
}
